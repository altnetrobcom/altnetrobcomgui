-- SCRIPTS PAGE CONTENT
local function createScriptCard(parent, name, yPos, scriptUrl)
    local card = Instance.new("Frame")
    card.Size = UDim2.new(1, -20, 0, 70)
    card.Position = UDim2.new(0, 10, 0, yPos)
    card.BackgroundColor3 = Color3.fromRGB(25, 25, 32)
    card.BorderSizePixel = 0
    card.Parent = parent
    
    local cardCorner = Instance.new("UICorner")
    cardCorner.CornerRadius = UDim.new(0, 10)
    cardCorner.Parent = card
    
    local scriptName = Instance.new("TextLabel")
    scriptName.Size = UDim2.new(1, -130, 1, 0)
    scriptName.Position = UDim2.new(0, 20, 0, 0)
    scriptName.BackgroundTransparency = 1
    scriptName.Text = "📜 " .. name
    scriptName.TextColor3 = Color3.fromRGB(200, 200, 220)
    scriptName.Font = Enum.Font.GothamBold
    scriptName.TextSize = 16
    scriptName.TextXAlignment = Enum.TextXAlignment.Left
    scriptName.Parent = card
    
    local execBtn = Instance.new("TextButton")
    execBtn.Size = UDim2.new(0, 100, 0, 40)
    execBtn.Position = UDim2.new(1, -110, 0.5, -20)
    execBtn.BackgroundColor3 = Color3.fromRGB(100, 150, 255)
    execBtn.Text = "Execute"
    execBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
    execBtn.Font = Enum.Font.GothamBold
    execBtn.TextSize = 14
    execBtn.Parent = card
    
    local execCorner = Instance.new("UICorner")
    execCorner.CornerRadius = UDim.new(0, 8)
    execCorner.Parent = execBtn
    
    execBtn.MouseEnter:Connect(function()
        TweenService:Create(execBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(120, 170, 255)}):Play()
    end)
    
    execBtn.MouseLeave:Connect(function()
        TweenService:Create(execBtn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(100, 150, 255)}):Play()
    end)
    
    execBtn.MouseButton1Click:Connect(function()
        execBtn.Text = "Loading..."
        spawn(function()
            local success, err = pcall(function()
                loadstring(game:HttpGet(scriptUrl))()
            end)
            wait(0.5)
            if success then
                execBtn.Text = "✓ Loaded"
                print("✅ " .. name .. " executed!")
            else
                execBtn.Text = "✗ Error"
                warn("❌ " .. name .. " failed: " .. tostring(err))
            end
            wait(2)
            execBtn.Text = "Execute"
        end)
    end)
end

createScriptCard(scriptsPage, "Infinite Yield", 10, "https://raw.githubusercontent.com/EdgeIY/infiniteyield/master/source")
createScriptCard(scriptsPage, "Murder Mystery 2", 90, "https://raw.githubusercontent.com/echelonvanta/Scripts/refs/heads/main/Loader")
createScriptCard(scriptsPage, "The Strongest Battlegrounds", 170, "https://raw.githubusercontent.com/DiosDi/VexonHub/refs/heads/main/VexonHub")
createScriptCard(scriptsPage, "99 Nights in the Forest", 250, "https://raw.githubusercontent.com/VapeVoidware/VW-Add/main/nightsintheforest.lua")

-- PLAYERS PAGE CONTENT
local function updatePlayersList()
    for _, child in pairs(playersPage:GetChildren()) do
        child:Destroy()
    end
    
    local yPos = 10
    for i, plr in pairs(Players:GetPlayers()) do
        local playerCard = Instance.new("Frame")
        playerCard.Size = UDim2.new(1, -20, 0, 60)
        playerCard.Position = UDim2.new(0, 10, 0, yPos)
        playerCard.BackgroundColor3 = Color3.fromRGB(25, 25, 32)
        playerCard.BorderSizePixel = 0
        playerCard.Parent = playersPage
        
        local playerCorner = Instance.new("UICorner")
        playerCorner.CornerRadius = UDim.new(0, 10)
        playerCorner.Parent = playerCard
        
        local playerAvatar = Instance.new("ImageLabel")
        playerAvatar.Size = UDim2.new(0, 40, 0, 40)
        playerAvatar.Position = UDim2.new(0, 10, 0.5, -20)
        playerAvatar.BackgroundTransparency = 1
        playerAvatar.Parent = playerCard
        
        local playerAvatarCorner = Instance.new("UICorner")
        playerAvatarCorner.CornerRadius = UDim.new(1, 0)
        playerAvatarCorner.Parent = playerAvatar
        
        spawn(function()
            local success, result = pcall(function()
                return Players:GetUserThumbnailAsync(plr.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size150x150)
            end)
            if success then
                playerAvatar.Image = result
            end
        end)
        
        local playerName = Instance.new("TextLabel")
        playerName.Size = UDim2.new(1, -70, 0, 25)
        playerName.Position = UDim2.new(0, 60, 0, 10)
        playerName.BackgroundTransparency = 1
        playerName.Text = plr.DisplayName
        playerName.TextColor3 = Color3.fromRGB(200, 200, 220)
        playerName.Font = Enum.Font.GothamBold
        playerName.TextSize = 15
        playerName.TextXAlignment = Enum.TextXAlignment.Left
        playerName.Parent = playerCard
        
        local playerUsername = Instance.new("TextLabel")
        playerUsername.Size = UDim2.new(1, -70, 0, 20)
        playerUsername.Position = UDim2.new(0, 60, 0, 30)
        playerUsername.BackgroundTransparency = 1
        playerUsername.Text = "@" .. plr.Name
        playerUsername.TextColor3 = Color3.fromRGB(120, 120, 140)
        playerUsername.Font = Enum.Font.Gotham
        playerUsername.TextSize = 12
        playerUsername.TextXAlignment = Enum.TextXAlignment.Left
        playerUsername.Parent = playerCard
        
        yPos = yPos + 70
    end
    
    playersPage.CanvasSize = UDim2.new(0, 0, 0, yPos + 10)
end

