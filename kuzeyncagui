-- Close Button Function
closeBtn.MouseButton1Click:Connect(function()
    TweenService:Create(main, TweenInfo.new(0.3), {Size = UDim2.new(0, 0, 0, 0)}):Play()
    wait(0.3)
    gui:Destroy()
    print("━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━")
    print("  Menu Closed - by kuzeynca")
    print("━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━")
end)

-- Minimize Function
local minimized = false
minimizeBtn.MouseButton1Click:Connect(function()
    if not minimized then
        TweenService:Create(main, TweenInfo.new(0.3), {Size = UDim2.new(0, 850, 0, 70)}):Play()
        minimizeBtn.Text = "□"
        minimized = true
    else
        TweenService:Create(main, TweenInfo.new(0.3), {Size = UDim2.new(0, 850, 0, 550)}):Play()
        minimizeBtn.Text = "_"
        minimized = false
    end
end)

-- Toggle GUI Visibility
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == toggleKey then
        main.Visible = not main.Visible
        print("👁️ GUI " .. (main.Visible and "shown" or "hidden"))
    end
end)

-- Button Hover Effects
local function addHover(btn, normal, hover)
    btn.MouseEnter:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = hover}):Play()
    end)
    btn.MouseLeave:Connect(function()
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = normal}):Play()
    end)
end

addHover(closeBtn, Color3.fromRGB(255, 70, 70), Color3.fromRGB(255, 100, 100))
addHover(minimizeBtn, Color3.fromRGB(60, 60, 70), Color3.fromRGB(80, 80, 90))

-- Time Update
spawn(function()
    while wait(1) do
        if timeText and timeText.Parent then
            timeText.Text = "🕐 " .. os.date("%H:%M:%S")
        else
            break
        end
    end
end)

-- Player Join/Leave Updates
Players.PlayerAdded:Connect(function()
    if pages["Player"].Visible then
        updatePlayersList()
    end
end)

Players.PlayerRemoving:Connect(function()
    if pages["Player"].Visible then
        updatePlayersList()
    end
end)

-- Opening Animation
main.Size = UDim2.new(0, 0, 0, 0)
TweenService:Create(main, TweenInfo.new(0.5, Enum.EasingStyle.Back), {
    Size = UDim2.new(0, 850, 0, 550)
}):Play()

wait(0.5)
print("✅ Menu Loaded Successfully!")
print("👤 User: " .. player.Name)
print("🔑 Toggle Key: " .. toggleKey.Name)
print("━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━━")
