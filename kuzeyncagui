-- Menu Buttons
local menuButtons = {
    {icon = "🏠", text = "Home", page = "Home"},
    {icon = "⚡", text = "Scripts", page = "Scripts"},
    {icon = "👤", text = "Player", page = "Player"},
    {icon = "🎮", text = "Games", page = "Games"},
    {icon = "⚙️", text = "Settings", page = "Settings"},
    {icon = "ℹ️", text = "Info", page = "Info"}
}

local activeButton = nil
local buttonY = 60

for i, btnData in ipairs(menuButtons) do
    local btn = Instance.new("TextButton")
    btn.Name = "MenuBtn" .. i
    btn.Size = UDim2.new(1, -20, 0, 45)
    btn.Position = UDim2.new(0, 10, 0, buttonY)
    btn.BackgroundColor3 = (i == 1) and Color3.fromRGB(100, 150, 255) or Color3.fromRGB(30, 30, 38)
    btn.BorderSizePixel = 0
    btn.Text = ""
    btn.AutoButtonColor = false
    btn.Parent = sidebar
    
    if i == 1 then
        activeButton = btn
    end
    
    local btnCorner = Instance.new("UICorner")
    btnCorner.CornerRadius = UDim.new(0, 10)
    btnCorner.Parent = btn
    
    local icon = Instance.new("TextLabel")
    icon.Size = UDim2.new(0, 35, 1, 0)
    icon.Position = UDim2.new(0, 10, 0, 0)
    icon.BackgroundTransparency = 1
    icon.Text = btnData.icon
    icon.TextSize = 20
    icon.Parent = btn
    
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(1, -50, 1, 0)
    label.Position = UDim2.new(0, 45, 0, 0)
    label.BackgroundTransparency = 1
    label.Text = btnData.text
    label.TextColor3 = (i == 1) and Color3.fromRGB(255, 255, 255) or Color3.fromRGB(150, 150, 170)
    label.Font = Enum.Font.GothamBold
    label.TextSize = 14
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = btn
    
    btn.MouseEnter:Connect(function()
        if btn ~= activeButton then
            TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(40, 40, 48)}):Play()
        end
    end)
    
    btn.MouseLeave:Connect(function()
        if btn ~= activeButton then
            TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(30, 30, 38)}):Play()
        end
    end)
    
    btn.MouseButton1Click:Connect(function()
        -- Deactivate old button
        if activeButton then
            TweenService:Create(activeButton, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(30, 30, 38)}):Play()
            for _, child in pairs(activeButton:GetChildren()) do
                if child:IsA("TextLabel") and child.Name ~= "Icon" then
                    child.TextColor3 = Color3.fromRGB(150, 150, 170)
                end
            end
        end
        
        -- Activate new button
        activeButton = btn
        TweenService:Create(btn, TweenInfo.new(0.2), {BackgroundColor3 = Color3.fromRGB(100, 150, 255)}):Play()
        label.TextColor3 = Color3.fromRGB(255, 255, 255)
        
        -- Hide all pages
        for _, page in pairs(pages) do
            page.Visible = false
        end
        
        -- Show selected page
        if pages[btnData.page] then
            pages[btnData.page].Visible = true
            
            -- Update players list when Players page is opened
            if btnData.page == "Player" then
                updatePlayersList()
            end
        end
        
        print("📄 Switched to: " .. btnData.text)
    end)
    
    buttonY = buttonY + 55
end

